<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="pers.wjx.ojsb.repository.ContestProblemUserRepository">
    <delete id="deleteRelationsByContestId">
        delete from contest_problem_user
        where contest_id = #{contestId}
    </delete>
    <select id="getRelationsByContestIdAndUserId" resultType="pers.wjx.ojsb.pojo.ContestProblemUserRelation">
        select *
        from contest_problem_user
        where contest_id = #{contestId} and user_id = #{userId}
        order by problem_number asc
    </select>
</mapper>