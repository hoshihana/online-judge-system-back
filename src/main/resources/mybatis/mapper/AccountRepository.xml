<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="pers.wjx.ojsb.repository.AccountRepository">
    <insert id="addAccount" useGeneratedKeys="true" keyProperty="id">
        insert into account(username, password, email, role)
        values (#{username}, #{password}, #{email}, #{role});
    </insert>

    <select id="getAccountByUsername" resultType="pers.wjx.ojsb.pojo.Account">
        select *
        from account
        where username = #{username}
    </select>

    <select id="getAccountByEmail" resultType="pers.wjx.ojsb.pojo.Account">
        select *
        from account
        where email = #{email}
    </select>
    <select id="getAccountById" resultType="pers.wjx.ojsb.pojo.Account">
        select *
        from account
        where id = #{id}
    </select>
    <select id="getUsernameById" resultType="java.lang.String">
        select username
        from account
        where id = #{id}
    </select>
</mapper>